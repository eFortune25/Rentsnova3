# ========================================
# RentsNova Environment Configuration
# ========================================

# Application Environment
NODE_ENV="production"

# ========================================
# Database Configuration (Vercel Postgres)
# ========================================
# Primary database connection - use Vercel Postgres or external PostgreSQL
DATABASE_URL="postgresql://username:password@hostname:port/database?schema=public&sslmode=require"

# Direct connection for migrations (when using connection pooling)
DIRECT_URL="postgresql://username:password@hostname:port/database?schema=public&sslmode=require"

# ========================================
# NextAuth.js Authentication
# ========================================
# Generate a secure random 32-character string for production
NEXTAUTH_SECRET="your-32-character-random-secret-string"

# Your Vercel deployment URL
NEXTAUTH_URL="https://your-app-name.vercel.app"

# ========================================
# Email Service Configuration
# ========================================
# Resend API (Recommended for production)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@your-domain.com"

# Alternative: SMTP Configuration (Gmail example)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# ========================================
# File Storage & Media
# ========================================
# Cloudinary for image uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ========================================
# Payment Integration (African Mobile Money)
# ========================================
# MTN Mobile Money
MTN_MONEY_API_KEY="your-mtn-money-api-key"
MTN_MONEY_API_SECRET="your-mtn-money-api-secret"
MTN_MONEY_SUBSCRIPTION_KEY="your-mtn-subscription-key"

# Orange Money
ORANGE_MONEY_API_KEY="your-orange-money-api-key"
ORANGE_MONEY_API_SECRET="your-orange-money-api-secret"

# ========================================
# Communication Services
# ========================================
# Twilio for SMS/WhatsApp notifications
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ========================================
# Security Configuration
# ========================================
# 32-character encryption key for sensitive data (2FA secrets)
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Admin security settings
MAX_FAILED_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=30

# ========================================
# Analytics & Monitoring (Optional)
# ========================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Sentry for error monitoring
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn"

# ========================================
# Development Configuration
# ========================================
# Enable detailed logging in development
PRISMA_LOG_LEVEL="query"

# Enable debug mode for NextAuth
NEXTAUTH_DEBUG=false

# ========================================
# IMPORTANT NOTES:
# ========================================
# 1. Replace all placeholder values with your actual keys
# 2. Never commit .env.local to version control
# 3. Set these variables in Vercel dashboard: vercel.com/dashboard
# 4. Generate NEXTAUTH_SECRET: openssl rand -base64 32
# 5. For production, ensure all URLs use HTTPS
# 6. Test email sending in staging before production deployment
