{
  "buildCommand": "npm run vercel-build",
  "functions": {
    "src/app/**": {
      "maxDuration": 30
    }
  },
  "regions": ["fra1", "iad1"],
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true"
  },
  "installCommand": "bun install",
  "crons": [
    {
      "path": "/api/cron/rent-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/cleanup-expired-sessions",
      "schedule": "0 2 * * *"
    }
  ]
}
